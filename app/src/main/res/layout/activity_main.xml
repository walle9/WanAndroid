<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity">

    <FrameLayout
        android:id="@+id/fl_tab_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/bottombar_main_height" />

    <LinearLayout
        android:layout_gravity="bottom"
        android:id="@+id/ll_main_bottombar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottombar_main_height"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal">
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/bottombar_main_height"
        android:background="@drawable/ic_actionbar_shadow_up" />


</FrameLayout>